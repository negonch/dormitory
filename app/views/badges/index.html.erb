  </div>



  <div class="content-wrapper buffer-both text-left">
  <div class="buffer-both">
    <h1>Пропуск</h1>
  </div>
</div>

  <div class="container">

    <% if flash.any? %>
      <div class="content-wrapper buffer-both">
        <% flash.each do |name, message| %>
          <%= content_tag :div, message, class: "flash-#{name}" %>
        <% end %>
      </div>
    <% end %>

  </div>

<div class="content-wrapper buffer-both text-left">
  <div class="buffer-both">
    <table class="table">
      <thead>
  <tr>
    <th>№ пропуска</th>
    <th>Дата выдачи</th>
    <th>Комментарий</th>
  </tr>
  </thead>

  <tbody>
  <% @badges.each do |badge| %>
    <tr>
      <td><%= badge.number %></td>
      <td><%= badge.date_issue %></td>
      <td><%= badge.comment %></td>
      <td><%= link_to "Подробнее", badge_show_path, class: 'button button-small' %></td>
      <td><%= link_to "Редактировать", badge_edit_path,  class: 'button button-small' %></td>
      <td><%= link_to "Удалить", badge_destroy_path, class: 'button button-small', method: :delete, data: { confirm: "Вы уверены?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

  </div>
</div>

